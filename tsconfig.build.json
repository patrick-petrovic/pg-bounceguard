{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "rootDir": "./lib",
    "typeRoots": [
      "./types"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "sourceRoot": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": [
    "./lib/**/*"
  ]
}
